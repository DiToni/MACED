<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:compactCalendarBackgroundColor="#fff"
        app:compactCalendarCurrentDayBackgroundColor="#aaaaaa"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#aa1a1a"
        app:compactCalendarCurrentSelectedDayTextColor="#fff"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#aa1a1a"
        app:compactCalendarTextSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="tw_month" />
</RelativeLayout>